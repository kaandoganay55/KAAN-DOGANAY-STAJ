{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./backend/dist",
    "rootDir": "./backend/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["backend/src/**/*"],
  "exclude": ["node_modules", "frontend"]
} 